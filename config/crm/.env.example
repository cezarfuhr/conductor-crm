# CRM Backend Configuration
# Copy this file to .env and fill with your actual credentials

# Server Configuration
PORT=5007
NODE_ENV=production

# Conductor Gateway Connection
CONDUCTOR_GATEWAY_URL=http://gateway:8080

# MongoDB Connection
MONGODB_URI=mongodb://admin:conductor123@mongodb:27017/crm?authSource=admin

# JWT Secret for Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# API Keys for external services
# (Add your CRM-specific integrations here)
SENDGRID_API_KEY=
TWILIO_API_KEY=
STRIPE_API_KEY=

# Feature Flags
ENABLE_AI_LEAD_QUALIFICATION=true
ENABLE_EMAIL_ASSISTANT=true
ENABLE_DEAL_PREDICTION=true
