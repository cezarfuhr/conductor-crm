# Conductor CRM - Main Environment Configuration
# Copy this file to .env and fill with your actual credentials
# This file is used for docker-compose

# ==========================================
# CONDUCTOR CORE CONFIGURATION
# ==========================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_API_MODEL=gpt-4o-mini

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# MongoDB Configuration
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=conductor123
MONGO_INITDB_DATABASE=conductor

# ==========================================
# CRM BACKEND CONFIGURATION
# ==========================================

# Server
CRM_PORT=5007
NODE_ENV=production

# JWT Secret
JWT_SECRET=change-this-to-a-secure-random-string

# ==========================================
# DOCKER CONFIGURATION
# ==========================================

# Plugin path
PLUGINS_PATH=./plugins

# Conductor version
CONDUCTOR_VERSION=latest

# ==========================================
# EXTERNAL INTEGRATIONS (Optional)
# ==========================================

# Email service (SendGrid, AWS SES, etc)
EMAIL_API_KEY=

# SMS service (Twilio, etc)
SMS_API_KEY=

# Payment (Stripe, etc)
PAYMENT_API_KEY=
