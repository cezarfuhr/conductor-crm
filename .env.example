# Conductor CRM - Environment Configuration
# Copy this file to .env and fill with your actual credentials
# IMPORTANT: Never commit .env file with actual values

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================

ENVIRONMENT=development
DEBUG=true

# ==========================================
# BACKEND (FastAPI) CONFIGURATION
# ==========================================

# Server
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_URL=http://localhost:8000

# Security
SECRET_KEY=change-this-to-a-secure-random-string-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:4200,http://localhost:3000

# ==========================================
# FRONTEND (Angular) CONFIGURATION
# ==========================================

FRONTEND_PORT=4200
FRONTEND_URL=http://localhost:4200

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# MongoDB
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=conductor123
MONGO_INITDB_DATABASE=conductor_dev
MONGO_URL=mongodb://admin:conductor123@localhost:27017/conductor_dev?authSource=admin

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# ==========================================
# CELERY CONFIGURATION
# ==========================================

CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ==========================================
# AI/ML APIS
# ==========================================

# Anthropic Claude (Primary)
CLAUDE_API_KEY=sk-ant-your-anthropic-api-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=4096

# OpenAI GPT (Backup)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# ==========================================
# EXTERNAL INTEGRATIONS
# ==========================================

# Google (Gmail + Calendar)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# Clearbit (Enrichment)
CLEARBIT_API_KEY=your-clearbit-api-key

# Hunter.io (Email Verification)
HUNTER_API_KEY=your-hunter-api-key

# SendGrid (Email Sending)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@conductor-crm.com

# Firebase Cloud Messaging (Push Notifications)
FCM_SERVER_KEY=your-fcm-server-key

# ==========================================
# MONITORING & ANALYTICS
# ==========================================

# Sentry (Error Tracking)
SENTRY_DSN=
SENTRY_DSN_FRONTEND=

# Google Analytics
GA_MEASUREMENT_ID=

# ==========================================
# DOCKER CONFIGURATION
# ==========================================

# Conductor Core
CONDUCTOR_VERSION=latest
PLUGINS_PATH=./plugins

# Compose Project Name
COMPOSE_PROJECT_NAME=conductor-crm

# ==========================================
# DEVELOPMENT TOOLS (Optional)
# ==========================================

# Hot Reload
WATCHFILES_FORCE_POLLING=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
